{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  }
}
